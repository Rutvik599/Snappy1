<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signuppage"
    android:background="@drawable/mainbackgroud"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="53dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcometext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/inputbakck"
                android:elevation="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="100dp"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/call"></ImageView>

                <EditText
                    android:id="@+id/signupmobilenumber"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/eddittext"
                    android:gravity="center"
                    android:hint="Enter Your Mobile number"
                    android:textColorHint="#000000"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:maxLength="10"
                    android:inputType="number"
                    android:singleLine="true"
                    ></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/inputbakck"
                android:elevation="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="200dp"

                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/password"></ImageView>

                <EditText
                    android:id="@+id/signuppassword"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@drawable/eddittext"
                    android:gravity="center"
                    android:hint="Enter Your Password"
                    android:textColorHint="#000000"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:inputType="textPassword"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    ></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/inputbakck"
                android:elevation="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="300dp"

                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/password2"></ImageView>

                <EditText
                    android:id="@+id/signupconfirmpassword"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:background="@drawable/eddittext"
                    android:gravity="center"
                    android:hint="Confirm Your Password"
                    android:textColorHint="#000000"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:inputType="textPassword"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    ></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="380dp"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="4dp"
                    app:cardBackgroundColor="@color/pink1"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="0.5dp">

                    <Button
                        android:id="@+id/signuploginbutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:background="@android:color/transparent"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textStyle="bold"/>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="4dp"
                    app:cardBackgroundColor="@color/pink1"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="0.5dp">

                    <Button
                        android:id="@+id/signupnextbutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:background="@android:color/transparent"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textStyle="bold"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>